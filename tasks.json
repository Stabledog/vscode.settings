{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "My shell env setup",
            "type": "shell",
            "args": [
                "-c",
                "curl http://s3.dev.obdc.bcs.bloomberg.com/shellkit-data/bb-shellkit-bootstrap.sh | bash -; ${HOME}/.local/bin/shpm install vbase;"
            ],
            "command": "/bin/bash",
            "group": {
                "kind":"none"
            },
            "presentation": {
                "echo":false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
            ]
        }
    ]
}
