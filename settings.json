{
    "files.associations": {
        "*taskrc": "shellscript",
        "*.jrnl": "markdown"
    },
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "vim.easymotion": true,
    "vim.hlsearch": true,
    "vim.leader": ",",
    "vim.useSystemClipboard": true,
    "vim.searchHighlightColor": "#ff7b00a1",
    //    "http.proxy": "http://proxy.bloomberg.com:81",
    //   "http.proxyStrictSSL": false,
    "terminal.integrated.cursorBlinking": true,
    //"terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\wsl.exe",
    //"terminal.integrated.shell.windows": "c:\\cygwin\\bin\\bash.exe",
    "terminal.integrated.shell.windows": "c:\\Windows\\System32\\Bash.exe",
    "terminal.integrated.env.windows": {
        "CHERE_INVOKING": "1"
    },
    "vim.cursorStylePerMode.insert": "block-outline",
    "vim.cursorStylePerMode.normal": "block",
    "git.ignoreMissingGitWarning": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "workbench.sideBar.location": "right",
    "workbench.colorCustomizations": {
        "window.activeBorder":"#00ff00",
        "window.inactiveBorder": "#ff0000"
    },

    "terminal.integrated.scrollback": 30000,
    "terminal.integrated.shellArgs.windows": [ "-l"],
    "vim.handleKeys": {
        "<C-d>": true,
        "<C-w>": false
    },
    "vim.insertModeKeyBindings": [
        {
            "before":  ["j", "k"],
            "after": ["<Esc>"]
        }
    ],

    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["s"],
            "commands": [":w"]
        }
    ],
    "editor.renderWhitespace": "none",
    "editor.renderControlCharacters": false,
    "liveServer.settings.donotVerifyTags": true,
    "python.jediEnabled": false,
    "breadcrumbs.enabled": false,
    "editor.minimap.enabled": false,
    "window.zoomLevel": 1,
    "workbench.colorTheme": "Monokai"
}
